# Configuration de l'environnement pour l'API REST
# =================================================
# Variables d'environnement pour la configuration de l'API

# Configuration de base
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Configuration de la base de données
DATABASE_URL=sqlite:///financial_app.db
# Pour PostgreSQL: postgresql://username:password@localhost/financial_app
# Pour MySQL: mysql+pymysql://username:password@localhost/financial_app

# Configuration JWT
JWT_ACCESS_TOKEN_EXPIRES=86400  # 24 heures en secondes
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 jours en secondes

# Configuration CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Configuration de logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Configuration de sécurité
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8

# Configuration de l'API
API_RATE_LIMIT=1000  # Requêtes par heure par utilisateur
API_MAX_CONTENT_LENGTH=16777216  # 16MB en bytes

# Configuration des données
DATA_RETENTION_DAYS=365
MAX_BATCH_SIZE=1000

# Configuration AWS (si nécessaire)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# Configuration Redis (pour le cache, optionnel)
REDIS_URL=redis://localhost:6379/0

# Configuration de développement
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Configuration de production
# FLASK_ENV=production
# FLASK_DEBUG=False
# FLASK_HOST=0.0.0.0
# FLASK_PORT=80
