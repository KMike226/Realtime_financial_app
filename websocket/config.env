# Configuration du serveur WebSocket
# ===================================
# Variables d'environnement pour la configuration du serveur WebSocket

# Configuration de base
SECRET_KEY=websocket-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Configuration du serveur WebSocket
WEBSOCKET_HOST=0.0.0.0
WEBSOCKET_PORT=5001
WEBSOCKET_DEBUG=True

# Configuration CORS pour WebSocket
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Configuration des transports WebSocket
WEBSOCKET_TRANSPORTS=websocket,polling
WEBSOCKET_TIMEOUT=10000

# Configuration des symboles surveillés
MONITORED_SYMBOLS=AAPL,GOOGL,MSFT,AMZN,TSLA,BTC,ETH

# Configuration du streaming
STREAMING_INTERVAL=1  # Secondes entre les mises à jour
STREAMING_ENABLED=True

# Configuration des rooms
AVAILABLE_ROOMS=financial_data,technical_indicators,price_alerts,system_status

# Configuration de la base de données (optionnel)
DATABASE_URL=sqlite:///websocket_app.db

# Configuration de logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Configuration de sécurité
MAX_CONNECTIONS=1000
CONNECTION_TIMEOUT=300  # Secondes

# Configuration des performances
THREAD_POOL_SIZE=10
ASYNC_MODE=threading

# Configuration Redis (pour le cache, optionnel)
REDIS_URL=redis://localhost:6379/1

# Configuration de production
# FLASK_ENV=production
# FLASK_DEBUG=False
# WEBSOCKET_DEBUG=False
# LOG_LEVEL=WARNING
